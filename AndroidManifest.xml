        <activity android:name="com.pandoroid.android.PandoroidSettings" android:noHistory="true"></activity>
        <service android:name=".PandoraRadioService" android:enabled="true" android:exported="false"></service>
        <activity android:name=".AboutDialog" android:theme="@style/Theme.Sherlock.Dialog"></activity>
